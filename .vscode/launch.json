  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "api:start"],
      "port": 9005
    },{
      "type": "node",
      "request": "launch",
      "name": "Launch Web App",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "web-app:start"],
      "port": 9007
    }
  ],
  "compounds": [
    {
      "name": "Launch All",
      "configurations": [ 
        "Launch API",
        "Launch Web App"
      ]
    }
  ]
}